{
  "name": "Snip-ninja",
  "manifest_version": 3,
  "version": "1.0.1",

  "action": {
    "default_icons": {},
    "default_popup": "./public/index.html"
  },
  "description": "This is a snip-ninja extension",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/content.js"]
    }
  ],
  "permissions": ["https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"],
  "content_security_policy": "script-src 'self' 'https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js' object-src 'self'"
}
